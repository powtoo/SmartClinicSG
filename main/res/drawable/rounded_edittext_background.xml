<!-- rounded_edittext_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#FFFFFF" /> <!-- Background color -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Border color -->
    <corners android:radius="8dp" /> <!-- Corner radius for smooth edges -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />
</shape>